  @media screen and (min-width: 480px) {
    /* 30rem */
    .mobile-breaks {
      display: none;
    }
  }

  @media screen and (min-width: 800px) {
    /* 50rem */
    .intro {
      height: calc(100vh - 28rem);
    }

    h2 {
      font-size: 3rem;
    }
  }
